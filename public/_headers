# Cache control headers for optimal performance

# Cache HTML files for 0 seconds (always revalidate)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache the root index
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache service worker for 0 seconds (always check for updates)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache manifest for 0 seconds
/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache JS and CSS files for 1 year (they have content hashes)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 week
/assets/*.png
  Cache-Control: public, max-age=604800

/assets/*.jpg
  Cache-Control: public, max-age=604800

/assets/*.svg
  Cache-Control: public, max-age=604800

# Cache icons for 1 week
/icon-*.png
  Cache-Control: public, max-age=604800
