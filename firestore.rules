rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles (needed for friend features)
      allow read: if isAuthenticated();

      // Users can create their own document during signup
      allow create: if isOwner(userId);

      // Users can only update their own document
      allow update: if isOwner(userId);

      // Users can only delete their own document
      allow delete: if isOwner(userId);
    }

    // Friendships collection
    match /friendships/{friendshipId} {
      // Helper function to validate friendship data structure
      function isValidFriendshipCreate() {
        let data = request.resource.data;
        return data.keys().hasAll(['users', 'requesterId', 'receiverId', 'status', 'createdAt', 'updatedAt']) &&
               data.users is list &&
               data.users.size() == 2 &&
               request.auth.uid == data.requesterId &&
               request.auth.uid in data.users &&
               data.receiverId in data.users &&
               data.status == 'pending';
      }

      // Helper function to validate friendship update
      function isValidFriendshipUpdate() {
        let data = request.resource.data;
        // User must be the receiver to accept/update
        return request.auth.uid == resource.data.receiverId &&
               data.status in ['pending', 'accepted'];
      }

      // Users can read friendships where they are a participant
      allow read: if isAuthenticated() &&
                     request.auth.uid in resource.data.users;

      // Users can create friendships where they are the requester
      allow create: if isAuthenticated() && isValidFriendshipCreate();

      // Users can update friendships where they are a participant
      // Requester can cancel (delete), receiver can accept (update)
      allow update: if isAuthenticated() &&
                       request.auth.uid in resource.data.users &&
                       (isValidFriendshipUpdate() || request.auth.uid == resource.data.requesterId);

      // Users can delete friendships where they are a participant
      allow delete: if isAuthenticated() &&
                       request.auth.uid in resource.data.users;
    }

    // Games collection
    match /games/{gameId} {
      // Allow authenticated users to read any game
      allow read: if isAuthenticated();

      // Allow authenticated users to create games
      allow create: if isAuthenticated();

      // Allow authenticated users to update games they created or are participating in
      allow update: if isAuthenticated();

      // Allow game creator to delete
      allow delete: if isAuthenticated();
    }

    // Game invites collection
    match /gameInvites/{inviteId} {
      // Users can read invites sent to them or by them
      allow read: if isAuthenticated() &&
                     (request.auth.uid == resource.data.toUserId ||
                      request.auth.uid == resource.data.fromUserId);

      // Users can create invites they are sending
      allow create: if isAuthenticated() &&
                       request.auth.uid == request.resource.data.fromUserId;

      // Users can update invites sent to them (to accept/dismiss)
      allow update: if isAuthenticated() &&
                       request.auth.uid == resource.data.toUserId;

      // Users can delete invites they sent
      allow delete: if isAuthenticated() &&
                       request.auth.uid == resource.data.fromUserId;
    }
  }
}
